dr2_y        0

# parameters to generate A(k,w) parameters:
eta           0.2             # imaginary frequency
w_min        -8.0             # minimum frequency plotted
w_max         8.0             # maximum frequency plotted
w_min_data  -15.0             # minimum frequency calculated
w_max_data   15.0             # maximum frequency calculated
Nw           1500             # calculate 1500 frequencies
exc_choice   all              # take all excitations
kPath        range(9)         # k points chosen in the path to plot


